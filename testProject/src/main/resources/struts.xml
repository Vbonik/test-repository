<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

    <package name="default" namespace="/" extends="struts-default">
        <action name="ftp" class="com.issoft.ftp.presentation.action.FtpAction">
            <result name="SUCCESS">jsp/welcomePage.jsp</result>
        </action>
        
        <action name="uploadFtp" method="upload" class="com.issoft.ftp.presentation.action.FtpAction">
            <result name="SUCCESS">jsp/welcomePage.jsp</result>
        </action>
       
        <action name="loginFtp" method="login" class="com.issoft.ftp.presentation.action.FtpAction">
            <result name="SUCCESS" >
                /jsp/welcomePage.jsp       
            </result>            
            <result name="FAILURE">/index.jsp</result>
        </action>
    </package>

</struts>
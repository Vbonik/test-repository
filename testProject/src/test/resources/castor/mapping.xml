<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
        "http://castor.org/mapping.dtd">

<mapping>
    <class name="com.issoft.entity.UserEntity">
        <map-to xml="user"/>

        <field name="userId" type="java.lang.String">
            <bind-xml name="userId" node="element"/>
        </field>

        <field name="userPassword" type="java.lang.String">
            <bind-xml name="userPassword" node="element"/>
        </field>

        <field name="homeDirectory" type="java.lang.String">
            <bind-xml name="homeDirectory" node="element"/>
        </field>

        <field name="enableFlag" type="boolean">
            <bind-xml name="enableFlag" node="element"/>
        </field>

        <field name="writePermission" type="boolean">
            <bind-xml name="writePermission" node="element"/>
        </field>

        <field name="idleTime" type="int">
            <bind-xml name="idleTime" node="element"/>
        </field>

        <field name="uploadRate" type="int">
            <bind-xml name="uploadRate" node="element"/>
        </field>

        <field name="downloadRate" type="int">
            <bind-xml name="downloadRate" node="element"/>
        </field>

        <field name="maxLoginNumber" type="int">
            <bind-xml name="maxLoginNumber" node="element"/>
        </field>

        <field name="maxLoginPerIP" type="int">
            <bind-xml name="maxLoginPerIp" node="element"/>
        </field>

        <field name="email" type="java.lang.String">
            <bind-xml name="email" node="element"/>
        </field>

        <field name="user_roles" type="com.issoft.entity.UserRole">
            <bind-xml name="userRole" node="element"/>
        </field>
    </class>

    <class name="com.issoft.entity.UserRole">
        <map-to xml="userRole"/>

        <field name="id" type="int">
            <bind-xml name="id" node="element"/>
        </field>
        <field name="authority" type="java.lang.String">
            <bind-xml name="authority" node="element"/>
        </field>
    </class>

</mapping>